<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/zircon</item>
        <item name="android:colorBackground">@color/white_smoke</item>
        <item name="android:fillColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NumbersTheme" parent="AppTheme">



        <item name="android:theme">@style/AppTheme</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="OperationsTheme" parent="NumbersTheme">

    </style>

</resources>
